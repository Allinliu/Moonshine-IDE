<?xml version="1.0"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009"
         xmlns:s="library://ns.adobe.com/flex/spark" visible.normal="false" includeInLayout.normal="false"
         width="18" height="18">
    <s:states>
        <s:State name="normal" />
        <s:State name="Function" />
        <s:State name="Keyword" />
        <s:State name="Variable" />
        <s:State name="Interface" />
        <s:State name="Class" />
        <s:State name="Field" />
        <s:State name="Property" />
    </s:states>
    <s:Ellipse verticalCenter="0" horizontalCenter="0" width="18" height="18">
        <s:fill>
            <s:SolidColor id="codeIndicatorColor"
                          color.Function="0x3382dd"
                          color.Keyword="0x6d5a9c"
                          color.Interface="0x5B4AE4"
                          color.Class="0xa848da"
                          color.Variable="0x6d5a9c"
                          color.Field="0xC28627"
                          color.Property="0x3E8854"/>
        </s:fill>
    </s:Ellipse>
    <s:Label id="codeIndicationLabel" verticalCenter="0" horizontalCenter="0" color="0xFFFFFF"
             fontWeight="bold" fontSize="10" textAlign="center"
             text.Function="M"
             text.Keyword="K"
             text.Interface="I"
             text.Class="C"
             text.Variable="V"
             text.Field="E"
             text.Property="P"/>
    <fx:Script><![CDATA[
        import actionScripts.valueObjects.CompletionItem;

        private var _data:CompletionItem;
        
        public function set data(value:CompletionItem):void
        {
            _data = value;
            if (value)
            {
                currentState = value.isProperty() ? "Property" : value.kind;
            }
        }

        override public function set currentState(value:String):void
        {
            if (hasState(value))
            {
                super.currentState = value;
            }
            else
            {
                super.currentState = "normal";
            }
        }
        ]]></fx:Script>
</s:Group>
